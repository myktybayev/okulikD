<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/bookshelf2"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/monthBookPhoto"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:src="@drawable/book_cover" />


            <TextView
                android:id="@+id/monthBName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="АҚПАРАТТЫҚ- КОММУНИКАЦИЯЛЫҚ ТЕХНОЛОГИЯЛАР"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="55dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bolim1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient3">

                        <ImageView
                            android:id="@+id/bolimSuter"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/bolim1_suret" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/bolimSuter"
                            android:gravity="center"
                            android:text="1-Бөлім \nПрограммалау"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bolim2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient3">

                        <ImageView
                            android:id="@+id/bolimSuter2"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/robot1" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/bolimSuter2"
                            android:gravity="center"
                            android:text="2-бөлім \nРобототехника"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bolim3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient3">

                        <ImageView
                            android:id="@+id/bolimSuter3"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/video" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/bolimSuter3"
                            android:gravity="center"
                            android:text="3-бөлім \nВидео жасау"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/bolim4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient3">

                        <ImageView
                            android:id="@+id/bolimSuter4"
                            android:layout_width="match_parent"
                            android:layout_height="70dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/power" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/bolimSuter4"
                            android:gravity="center"
                            android:text="4-бөлім \nПрезентациялар"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/bolim5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:cardPreventCornerOverlap="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/gradient3">

                        <ImageView
                            android:id="@+id/bolimSuter5"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/inet" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_below="@id/bolimSuter5"
                            android:gravity="center"
                            android:text="5-бөлім \nБолашақтың компьютерлері"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>